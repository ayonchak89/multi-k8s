{
    "AWSEBDockerrunVersion": 2,
    "containderDefinitions": [
        {
            "name": "client",
            "image": "ayonchakraborty/multi-client",
            "hostname": "client",
            "essential": false,
            "memory": 128
        },
        {
            "name": "server",
            "image": "ayonchakraborty/multi-server",
            "hostname": "api",
            "essential": false,
            "memory": 128
        },
        {
            "name": "worker",
            "image": "ayonchakraborty/multi-worker",
            "hostname": "worker",
            "essential": false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "ayonchakraborty/multi-nginx",
            "hostname": "client",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links" :["client", "server"],
            "memory": 128

        }
    ]
}